---
import Layout from '../layouts/Layout.astro';
import placeholderAvatar from '../images/team/placeholder-avatar.svg';
---

<Layout title="Our Team">
    <main class="main-content">
        <section class="hero">
            <div class="hero-content">
                <h1 class="hero-title">Our Team</h1>
                <p class="hero-subtitle">Together, we are TURBΩ.</p>
                <p class="hero-description">
                    At TURBΩ V8, we fuel future STEM leadership by accelerating innovation 
                    and propelling communities forward through collaborative mentorship.
                </p>
            </div>
        </section>

        <section class="section">
            <div class="container">
                <!-- Team Captain -->
                <div class="team-category">
                    <h2 class="section-title">Team Captain</h2>
                    <div class="grid-auto-fit">
                        <div class="card card-hover team-member">
                            <div class="member-photo circular-image">
                                <img class="image-cover" src={placeholderAvatar.src} alt="Veer Nanda" />
                            </div>
                            <h3 class="member-name">Veer Nanda</h3>
                            <p class="member-role text-red text-uppercase">Team Captain</p>
                        </div>
                    </div>
                </div>

                <!-- Hardware Team -->
                <div class="team-category mb-6">
                    <h2 class="section-title">Hardware Team</h2>
                    <div class="grid-auto-fit">
                        <div class="card card-hover team-member">
                            <div class="member-photo circular-image image-hover-scale">
                                <img class="image-cover" src={placeholderAvatar.src} alt="Devesh" />
                            </div>
                            <h3 class="member-name">Devesh</h3>
                            <p class="member-role text-red text-uppercase">Hardware Lead</p>
                        </div>
                        <div class="card card-hover team-member">
                            <div class="member-photo circular-image image-hover-scale">
                                <img class="image-cover" src={placeholderAvatar.src} alt="Rukshana" />
                            </div>
                            <h3 class="member-name">Rukshana</h3>
