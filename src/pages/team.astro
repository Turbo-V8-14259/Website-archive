<style>
    main {
        width: 100%;
        padding-top: 80px; /* Account for fixed nav */
    }

    .hero {
        background: linear-gradient(135deg, var(--black) 0%, var(--dark-red) 100%);
        padding: 4rem 2rem;
        text-align: center;
        border-bottom: 2px solid var(--light-red);
    }

    .hero-content {
        max-width: 800px;
        margin: 0 auto;
    }

    .hero h1 {
        font-size: 3.5rem;
        font-weight: bold;
        color: var(--light-red);
        text-shadow: 0 0 20px var(--red-shadow);
        margin-bottom: 1rem;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        color: white;
        margin-bottom: 1rem;
        font-weight: 600;
    }

    .hero-description {
        font-size: 1.1rem;
        color: #cccccc;
        line-height: 1.6;
        max-width: 600px;
        margin: 0 auto;
    }

    .team-section {
        padding: 4rem 0;
        background: var(--black);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .team-category {
        margin-bottom: 4rem;
    }

    .category-title {
        font-size: 2.5rem;
        color: var(--light-red);
        text-align: center;
        margin-bottom: 3rem;
        font-weight: bold;
        text-shadow: 0 0 15px var(--red-shadow);
        position: relative;
    }

    .category-title::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 100px;
        height: 3px;
        background: linear-gradient(90deg, transparent, var(--light-red), transparent);
    }

    .team-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        justify-items: center;
    }

    .team-member {
        background: linear-gradient(145deg, #1a1a1a, #0f0f0f);
        border: 2px solid #333;
        border-radius: 15px;
        padding: 2rem;
        text-align: center;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        width: 100%;
        max-width: 280px;
    }

    .team-member:hover {
        transform: translateY(-10px);
        border-color: var(--light-red);
        box-shadow: 0 8px 25px rgba(255, 26, 26, 0.2);
    }

    .member-photo {
        width: 120px;
        height: 120px;
        margin: 0 auto 1.5rem;
        border-radius: 50%;
        overflow: hidden;
        border: 3px solid var(--light-red);
        box-shadow: 0 0 20px rgba(255, 26, 26, 0.3);
    }

    .member-photo img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .team-member:hover .member-photo img {
        transform: scale(1.1);
    }

    .member-name {
        font-size: 1.3rem;
        color: white;
        margin-bottom: 0.5rem;
        font-weight: bold;
    }

    .member-role {
        color: var(--light-red);
        font-size: 1rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .hero h1 {
            font-size: 2.5rem;
        }

        .hero-subtitle {
            font-size: 1.2rem;
        }

        .hero-description {
            font-size: 1rem;
        }

        .category-title {
            font-size: 2rem;
        }

        .team-grid {
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
        }

        .team-member {
            padding: 1.5rem;
        }

        .member-photo {
            width: 100px;
            height: 100px;
        }
    }

    @media (max-width: 480px) {
        .hero {
            padding: 2rem 1rem;
        }

        .container {
            padding: 0 1rem;
        }

        .team-grid {
            grid-template-columns: 1fr;
        }
    }
</style>