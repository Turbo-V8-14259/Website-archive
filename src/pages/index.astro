---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Welcome to Astro.">
    <main>
        <h1>You aren't supposed to be here...</h1>
        <p>
            click <a href="https://ftcturbov8.com">here</a> to go back to our main site.
        </p>

    </main>
</Layout>

<style>
    main {
        margin: auto;
        padding: 1rem;
        width: 800px;
        max-width: calc(100% - 2rem);
        color: white;
        font-size: 20px;
        line-height: 1.6;
    }



    h1 {
        font-size: 4rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin-bottom: 1em;
    }

    p {
        font-size: 2rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin-bottom: 1em;
    }
    a:link a:visited {
        color: #0059ff;
        background-color: transparent;
        text-decoration: none;
    }

    a:visited {
        color: #0059ff;
        background-color: transparent;
        text-decoration: none;
    }

    a:hover {
        color: #0095ff;
        background-color: transparent;
        text-decoration: underline;
    }

    a:active {
        color: #00d0ff;
        background-color: transparent;
        text-decoration: underline;
    }
</style>
