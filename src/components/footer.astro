---
import bytebridge from '../images/sponsor-logos/bytebridge.png';
import haas from '../images/sponsor-logos/haas.png';
import ugp from '../images/sponsor-logos/ugp.png';
import polymaker from '../images/sponsor-logos/polymaker.png';
import vbelt from '../images/sponsor-logos/vbelt.png';
import pcbway from '../images/sponsor-logos/pcbway.png';

import {getImage} from "astro:assets";
---
<section id="footer">
    <div class="sponsors">
        <h2 id="sponsor-title">SPONSORS</h2>
        <section class="sponsor-logos slider">
            <a href="https://www.bytebt.com/" target="_blank" rel="noopener noreferrer" class="slide"><img src={(await getImage({src:bytebridge})).src} alt="Bytebridge Logo"/></a>
            <a href="https://www.haascnc.com/content/ghf/en/home.html" target="_blank" rel="noopener noreferrer" class="slide"><img src={(await getImage({src:haas})).src} alt="Gene Haas Foundation Logo"/></a>
            <a href="https://undergroundshirts.com/" target="_blank" rel="noopener noreferrer" class="slide"><img src={(await getImage({src:ugp})).src} alt="Underground Printing Press Logo"/></a>
            <a href="https://polymaker.com/" target="_blank" rel="noopener noreferrer" class="slide"><img src={(await getImage({src:polymaker})).src} alt="Polymaker Logo"/></a>
            <a href="https://www.vbeltguys.com/" target="_blank" rel="noopener noreferrer" class="slide"><img src={(await getImage({src:vbelt})).src} alt="V-Belt Guys Logo"/></a>
            <a href="https://www.pcbway.com/" target="_blank" rel="noopener noreferrer" class="slide"><img src={(await getImage({src:pcbway})).src} alt="PCBWay Logo"/></a>
        </section>
    </div>
