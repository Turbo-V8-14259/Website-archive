---
import bytebridge from '../images/sponsor-logos/bytebridge.png';
import haas from '../images/sponsor-logos/haas.png';
import ugp from '../images/sponsor-logos/ugp.png';
import polymaker from '../images/sponsor-logos/polymaker.png';
import vbelt from '../images/sponsor-logos/vbelt.png';
import pcbway from '../images/sponsor-logos/pcbway.png';

const year = new Date().getFullYear(); //fallback

import {getImage} from "astro:assets";
import {Image} from "astro:assets"
import {email} from "../constants"
const emailLink = "mailto:" + email;
---
<section id="footer">
    <div class="sponsors">
        <h2 id="sponsor-title">SPONSORS</h2>
        <section class="sponsor-logos slider">
            <a href="https://www.bytebt.com/" target="_blank" rel="noopener noreferrer" class="slide">
                <Image src={bytebridge} alt="Bytebridge Logo 2"/>
            </a>
            <a href="https://www.haascnc.com/content/ghf/en/home.html" target="_blank" rel="noopener noreferrer"
               class="slide">
                <Image src={haas} alt="Gene Haas Foundation Logo"/>
            </a>
            <a href="https://undergroundshirts.com/" target="_blank" rel="noopener noreferrer" class="slide">
                <Image src={ugp} alt="Underground Printing Press Logo"/>
            </a>
            <a href="https://polymaker.com/" target="_blank" rel="noopener noreferrer" class="slide">
                <Image src={polymaker} alt="Polymaker Logo"/>
            </a>
            <a href="https://www.vbeltguys.com/" target="_blank" rel="noopener noreferrer" class="slide">
                <Image src={vbelt} alt="V-Belt Guys Logo"/>
            </a>
            <a href="https://www.pcbway.com/" target="_blank" rel="noopener noreferrer" class="slide">
                <Image src={pcbway} alt="PCBWay Logo"/>
            </a>
        </section>
    </div>
    <footer>
        <p>
            &copy; <span id="footer-year">{year}</span> TurbÎ© V8 - All rights reserved<br>FIRST Tech Challenge (FTC)<br>
            <a id="email" target="_blank" rel="noopener noreferrer" href={emailLink}>{email}</a>
        </p>
    </footer>
    <script is:inline>
        document.getElementById("footer-year").innerText = new Date().getFullYear();
    </script>
</section>
<style>
    #sponsor-title {
        font-size: xx-large;
    }

    #email:link, #email:visited {
        color: white;
    }

    footer {
        background-color: var(--red-glow);
        text-align: center;
        padding-bottom: 50px;
        padding-top: 20px;
    }

    .sponsors {
        width: 100%;
        padding-top: 20px;
        text-align: center;
        margin-bottom: 40px;
    }

    .sponsor-logos {
        width: 90%;
        margin: 0px auto;
    }

    .slick-slide {
        margin: 10px;
    }

    .slick-slide img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border: 2px solid #fff;
    }

    .wrapper .slick-dots li button:before {
        font-size: 20px;
        color: white;
    }
</style>