---
interface props{
    titleText:string;
    subtitleText:string;
    buttonText:string;
    buttonURL:string;
    bgImage:string;
}

var {titleText, subtitleText, buttonText, buttonURL, bgImage} = Astro.props;
if (bgImage) {
    bgImage="url("+bgImage+")";
}
else {
    bgImage="none";
}

---
<section class="title">
    <div class="title-content">
        <h1>{titleText}</h1>
        <p>Innovating through robotics and technology</p>
        <a class="cta-button">View Our Projects</a>
    </div>
</section>

<style define:vars={{bgImage}}>
    .title {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(rgba(10, 10, 10, 0.7), rgba(10, 10, 10, 0.7)), var(--bgImage) center/cover;
        position: relative;
        overflow: hidden;
    }

    .title::after {
        content: '';
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 100px;
        background: linear-gradient(transparent, var(--black));
    }

    .title-content {
        text-align: center;
        z-index: 1;
    }

    h1 {
        font-size: 4rem;
        margin-bottom: 1rem;
        color: white;
        text-shadow: 0 0 15px var(--red-bg);
    }

    p {
        font-size: 1.5rem;
        margin-bottom: 2rem;
        color: #ffffff90;
    }

    .cta-button {
        display: inline-block;
        padding: 1rem 2rem;
        background: var(--red);
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .cta-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 0 20px var(--red-glow);
    }
</style>